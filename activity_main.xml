<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text=" Registration Form"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="22dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <View
                android:layout_width="400dp"
                android:layout_height="1dp"
                android:background="#ACA1A1"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="First Name:"
                    android:textSize="20dp"
                    android:layout_marginLeft="5dp"/>
                <EditText
                    android:id="@+id/firstName"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:textSize="20dp"
                    android:background="#5676"
                    android:hint="  Enter First Name"
                    android:layout_marginLeft="3dp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/space1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#B71C1C"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last Name:"
                    android:textSize="20dp"
                    android:layout_marginLeft="5dp" />
                <EditText
                    android:id="@+id/lastName"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:textSize="20dp"
                    android:background="#5676"
                    android:hint="  Enter Last Name"
                    android:layout_marginLeft="3dp" />
            </LinearLayout>
            <TextView
                android:id="@+id/space2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#B71C1C"/>
            <RadioGroup
                android:id="@+id/Rg1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Evaluation Type:"
                    android:textSize="20dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"/>
                <RadioButton
                    android:id="@+id/Cgpa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CGPA"
                    android:gravity="center"
                    android:textSize="18dp"/>
                <RadioButton
                    android:id="@+id/Percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PERCENT"
                    android:gravity="center"
                    android:textSize="16dp"/>
            </RadioGroup>
            <TextView
                android:id="@+id/space3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#B71C1C"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10th marks:"
                    android:textSize="20dp"
                    android:layout_marginLeft="5dp" />
                <EditText
                    android:id="@+id/marks"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:textSize="20dp"
                    android:background="#5676"
                    android:hint="  Enter 10th marks"
                    android:layout_marginLeft="5dp"
                    android:inputType="number"/>

            </LinearLayout>
            <TextView
                android:id="@+id/space4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#B71C1C"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="12th marks:"
                    android:textSize="20dp"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/markss"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:background="#5676"
                    android:hint="  Enter 12th marks"
                    android:textSize="20dp"
                    android:inputType="number" />

            </LinearLayout>
            <TextView
                android:id="@+id/space5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#B71C1C"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stream:"
                    android:textSize="20dp"
                    android:layout_marginLeft="5dp" />
                <EditText
                    android:id="@+id/steam"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:textSize="20dp"
                    android:background="#5676"
                    android:hint="  Enter Stream"
                    android:layout_marginLeft="5dp" />

            </LinearLayout>
            <TextView
                android:id="@+id/space6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#B71C1C"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Father's Name:"
                    android:textSize="20dp"
                    android:layout_marginLeft="5dp" />
                <EditText
                    android:id="@+id/fatherName"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:textSize="20dp"
                    android:background="#5676"
                    android:hint=" Enter Father's Name"
                    android:layout_marginLeft="5dp" />

            </LinearLayout>
            <TextView
                android:id="@+id/space7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#B71C1C"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mother's Name:"
                    android:textSize="20dp"
                    android:layout_marginLeft="5dp" />
                <EditText
                    android:id="@+id/motherName"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:textSize="20dp"
                    android:background="#5676"
                    android:hint="  Enter Mother's Name"
                    android:layout_marginLeft="5dp" />

            </LinearLayout>
            <TextView
                android:id="@+id/space8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#B71C1C"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="City:"
                    android:textSize="20dp"
                    android:layout_marginLeft="5dp" />
                <EditText
                    android:id="@+id/city"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:textSize="20dp"
                    android:background="#5676"
                    android:hint="  Enter City"
                    android:layout_marginLeft="5dp" />

            </LinearLayout>
            <TextView
                android:id="@+id/space9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#B71C1C"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile Number:"
                    android:textSize="20dp"
                    android:layout_marginLeft="5dp" />
                <EditText
                    android:id="@+id/mobileno"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:textSize="20dp"
                    android:background="#5676"
                    android:hint="  Enter Mobile Number"
                    android:layout_marginLeft="5dp"
                    android:inputType="number" />

            </LinearLayout>
            <TextView
                android:id="@+id/space10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#B71C1C"/>
            <RadioGroup
                android:id="@+id/Rg2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender:"
                    android:textSize="20dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"/>
                <RadioButton
                    android:id="@+id/Male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:gravity="center"
                    android:textSize="20dp"/>
                <RadioButton
                    android:id="@+id/Female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:gravity="center"
                    android:textSize="20dp"/>
                <RadioButton
                    android:id="@+id/Other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Other"
                    android:gravity="center"
                    android:textSize="20dp"/>
            </RadioGroup>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Skills:"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"/>
                <CheckBox
                    android:id="@+id/C"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C"
                    android:textSize="20dp"/>
                <CheckBox
                    android:id="@+id/JAVA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JAVA"
                    android:textSize="20dp"/>
                <CheckBox
                    android:id="@+id/PYTHON"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PYTHON"
                    android:textSize="20dp"/>
            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Comment:"
                    android:textSize="20dp"

                    android:layout_marginLeft="5dp"/>
                <EditText
                    android:id="@+id/comment"
                    android:layout_width="300dp"
                    android:layout_height="100dp"
                    android:hint="  Enter Comments..."
                    android:layout_marginLeft="15dp"
                    android:background="#5676"/>


            </LinearLayout>
            <TextView
                android:id="@+id/space11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#B71C1C"/>

            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:textColor="#F5FBF6"
                android:background="#B71C1C"
                android:layout_marginTop="10dp"/>



        </LinearLayout>


    </ScrollView>


</LinearLayout>
